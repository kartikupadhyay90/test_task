<p id="notice"><%= notice %></p>

<h1>Listing Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.description %></td>
        <td><%= line_item.amount %></td>
        <td><%= link_to 'Show', invoice_line_item_path(invoice_id: @invoice.id, id: line_item.id) %></td>
        <td><%= link_to 'Edit', edit_invoice_line_item_path(invoice_id: @invoice.id, id: line_item.id) %></td>
        <td><%= link_to 'Destroy', invoice_line_item_path(invoice_id: @invoice.id, id:line_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

