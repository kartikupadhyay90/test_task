<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @invoice.description %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @invoice.amount %>
</p>

<p>
  <strong>Line Items:</strong>
</p>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @invoice.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.description %></td>
        <td><%= line_item.amount %></td>
        <td><%= link_to 'Show', invoice_line_item_path(@invoice, line_item) %></td>
        <td><%= link_to 'Edit', edit_invoice_line_item_path(@invoice, line_item) %></td>
        <td><%= link_to 'Destroy', invoice_line_item_path(@invoice, line_item), method: :delete, data: { confirm: 'Are you sure you want to delete this line item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
